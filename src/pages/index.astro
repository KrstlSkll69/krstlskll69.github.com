        if (!friendsList) return;

        const shuffledFriends = shuffle([...allFriends]);

        const displayFriends = [...fixedFriends, ...shuffledFriends];

        friendsList.innerHTML = displayFriends.map(friend => `
            <li class="min-w-0 overflow-hidden">
